package main
import "fmt"

func main() {
    // var declares one or more variables
    var a = "initial"
    fmt.Println(a)

    // Declare multiple variables at once
    var b, c int = 1, 2
    fmt.Println(b, c)

    // Go infers the type of initialized variables
    var d = true
    fmt.Println(d)

    // Variables declared without initialization have zero values
    var e int
    fmt.Println(e)

    // := shorthand for declaring and initializing a variable (only inside functions)
    f := "apple"
    fmt.Println(f)
}

/*
Output:
initial
1 2
true
0
apple
*/
